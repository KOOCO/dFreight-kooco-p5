@using Dolphin.Freight.Localization;
@using Microsoft.Extensions.Localization;
@model Dolphin.Freight.ImportExport.AirImports.AirImportDetails
@inject IStringLocalizer<FreightResource> L
<style>
    .sortable-list__item {
        padding: 5px 22px 5px 7px;
        color: #fff;
        margin-bottom: 5px;
        background: #AAAAAA url(data:image/svg+xml;base64,) calc(100% - 8px) 10px no-repeat;
    }
</style>

<form id="frmManifest" data-check-form-on-close="false">
    <abp-modal>
        <h5 class="modal-title mx-3" style="color: black;">Batch Printing</h5>
        <abp-modal-body class="overflow-auto" style="height:200px;">
            <div class="row">                
                <div class="col-md-6">
                    <div class="table-scroll-10">
                        <div class="table-scroll-head">
                            <table class="table table-bordered table-striped table-hover">
                                <colgroup>
                                    <col class="td-3per"><!--chk-->
                                    <col class="td-22per"><!--HB/L No. / HAWB No.-->
                                    <col class="td-25per"><!--Consignee-->
                                    <col class="td-25per"><!--Customer-->
                                    <col class="td-25per"><!--Trucker-->
                                </colgroup>
                                <thead class="th-bg">
                                    <tr>
                                        <th class="text-center"><div class="checker"><span class="checked"><input type="checkbox" bind-uniform="" checked="checked"></span></div></th>
                                        <th class="ng-binding">HAWB No.</th>
                                        <th class="ng-binding">Consignee</th>
                                        <th class="ng-binding">Customer</th>
                                        <th class="ng-binding">Notify</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="table-scroll-body">
                            <table class="table table-bordered table-striped table-hover">
                                <colgroup>
                                    <col class="td-3per"><!--chk-->
                                    <col class="td-22per"><!--HB/L No. / HAWB No.-->
                                    <col class="td-25per"><!--Consignee-->
                                    <col class="td-25per"><!--Customer-->
                                    <col class="td-25per"><!--Trucker-->
                                </colgroup>
                                <tbody>
                                    @foreach (var item in Model.HawbNos)
                                    {
                                        <tr ng-repeat="hbl in vm.hbls" class="ng-scope" style="">
                                            <td class="text-center">
                                                <div class="checker"><span class="checked"><input type="checkbox" class="ng-pristine ng-untouched ng-valid ng-not-empty"></span></div>
                                            </td>
                                            <td ng-bind="hbl.HBL_NO" class="ng-binding">@item.HawbNos</td>
                                            <td ng-bind="hbl.consignee.name" class="ng-binding">@item.Consignee</td>
                                            <td ng-bind="hbl.customer.name" class="ng-binding">@item.Customer</td>
                                            <td ng-bind="hbl.notify.name" class="ng-binding">@item.Notify</td>
                                        </tr>
                                    }
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </abp-modal-body>
        <abp-modal-footer>
            <abp-button id="btnManifestCancel"
                        text="Cancel"
                        button-type="Default"
                        onclick="ManifestCancel()" />
            <abp-button id="btnManifestSave"
                        text="Save"
                        button-type="Primary"
                        onclick="ManifestSave()" />
        </abp-modal-footer>
    </abp-modal>
</form>


<script>
    $(document).ready(function () {
        $('#btnManifestCancel').on('click', function () {

        })
        $('#btnManifestSave').on('click', function () {

        })
    })

    function ManifestSave() {
        var url = new URL(window.location.href);
        var mawbId = url.searchParams.get('Id');

        if (mawbId == null) {
            var url = window.location.href;
            var mawbId = url.split('/')[url.split('/').length - 1];
        }

        $.ajax({
            url: abp.appPath + 'Docs/BatchPrintingNoticeAirImport',
            type: 'GET',
            data: { mawbId: mawbId, agent: $('#overSeaAgentsList').val(), pageType: 'AIMBL' },
            success: function (res) {
                var agent = $('#overSeaAgentsList').val();
                var pageType = 'AIMBL';
                var Url = abp.appPath + 'Docs/BatchPrintingNoticeAirImport?mawbId=' + mawbId + '&agent=' + agent + '&pageType=' + pageType
                var myWindows = window.open(Url, 'Empty', 'width=1200,height=800');
                myWindows.focus();
            }
        });
    }

    function ManifestCancel() {
        $('.modal').modal('hide');
    }
</script>