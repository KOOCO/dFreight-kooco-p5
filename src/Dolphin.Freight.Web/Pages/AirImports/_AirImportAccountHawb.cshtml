                                    <td>@dto.InvoiceCompanyName</td>
                                    <td>@dto.TotalBeforeTax</td>
                                    <td>0.00</td>
                                    <td>@dto.TotalAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
