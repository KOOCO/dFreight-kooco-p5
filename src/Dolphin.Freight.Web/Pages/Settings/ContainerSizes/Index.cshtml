@page
@using Dolphin.Freight.Localization
@using Dolphin.Freight.Permissions
@using Dolphin.Freight.Web.Pages.Settings.PackageUnits
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@model Dolphin.Freight.Web.Pages.Settings.ContainerSizes.IndexModel
@inject IStringLocalizer<FreightResource> L
@inject IAuthorizationService AuthorizationService
@section scripts{
    <abp-script src="/Pages/Settings/ContainerSizes/Index.js" />
}
<div class="page-header">
    <div class="breadcrumb-wrapper">
        <abp-breadcrumb>
            <abp-breadcrumb-item title=@L["Menu:Settings"] />
            <abp-breadcrumb-item title=@L["Menu:ContainerSizes"] href="#" />
        </abp-breadcrumb>
    </div>
</div>
<div class="page-content-area">
    <abp-card>
        <abp-card-header>
            <div class="title">
                @L["Menu:ContainerSizes"]
            </div>
            @if (await AuthorizationService.IsGrantedAsync(SettingsPermissions.ContainerSizes.Create))
            {
                <abp-button id="NewContainerSizeButton"
                        text="@L["Create"].Value"
                        icon="plus"
                            class="btn btn-add" />
            }
        </abp-card-header>
        <abp-card-body>
            <div class="row">
                <abp-column size="_6">
                    <abp-input asp-for="Search" />
                </abp-column>
                <abp-column size="_3">
                    <abp-select asp-for="Active" asp-items="@Model.StatusList" />
                </abp-column>
                <abp-column size="_3">
                    <abp-button id="SearchButton"
                                text="@L["Search"].Value"
                                icon="search"
                                style="margin-top:29px"
                                class="btn-primary" />
                </abp-column>
            </div>
            <abp-table class="nowrap"  striped-rows="true" id="ContainerSizesTable"></abp-table>
        </abp-card-body>
    </abp-card>
</div>
