@using Dolphin.Freight.Web.Pages.Components
@using Dolphin.Freight.Localization
@using Microsoft.Extensions.Localization
@model ComponentData
@inject IStringLocalizer<FreightResource> L
@if (Model.IsShowLabel) 
{
<label for="@Model.FieldName" class="form-label">

    @L[Model.FieldName]
    @if (Model.IsRequired)
    {
        <span class="text-danger">*</span>
    }
</label>
}

<select name="@Model.Name" id="@Model.Id" class="form-select form-control form-select-sm cursor-pointer">
    <option></option>
    @foreach (SelectListItem item in Model.AspItems)
    {
        @if (item.Value == Model.Selected)
        {
            <option value="@item.Value" selected>@item.Text</option>
        }
        else
        {
            <option value="@item.Value">@item.Text</option>
        }
    }
</select>