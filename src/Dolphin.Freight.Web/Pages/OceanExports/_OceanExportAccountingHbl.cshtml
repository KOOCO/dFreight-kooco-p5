                @L["Display:Function"]
            </button>
            <div class="dropdown-menu " aria-labelledby="dropdownMenuButton1" id="ActionDrop" style="max-height:300px !important;overflow:auto">
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-lock"></i> @L["Btn:Lock"]
                </a>
                <i class="dropdown-divider"></i>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-files-o"></i> @L[" File Package"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Print car documents"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Print HB/L"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Print OB/L"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Bill of lading terms"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" commercial invoice"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Certificate of Origin"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Dock Receipt"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" dispatch list"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" S/O Confirmation"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" bank draft"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" packaging label"]
                </a>

                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L["Pre-Alert"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" USDA Heat Treatment"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Forwarder cargo receipt"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Dangerous Goods Declaration"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Preliminary Claim"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" EXAM HOLD NOTICE"]
                </a>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Shipping Advice"]
                </a>
                <i class="dropdown-divider"></i>
                <a class='dropdown-item' href='#'>
                    <i class="fa fa-file-text-o"></i> @L[" Profit Report"]
                </a>
                <i class="dropdown-divider"></i>
                <a class='dropdown-item' href='#' style="color: #4B77BE; font-weight: 500;">
                    <i class="fa fa-location-arrow"></i> @L["Btn:Tracking"]
                </a>
            </div>
        </div>
        <button type="button" class="btn btn-collapse" data-bs-toggle="collapse" data-bs-target="#hblDiv" aria-expanded="true" aria-controls="hblDiv">
        </button>

    </abp-card-header>
    <abp-card-body class="collapse show " id="hblDiv">
        <abp-row>

            <abp-column size-md="_12">
                <div>
                    <abp-button class="btn btn-info me-md-2" style="color:#FFFFFF;" type="button" onclick="gotoInvoice('@Model.OceanExportHblDto.MblId','@Model.OceanExportHblDto.Id',0)">@L["Btn:AddAR"]</abp-button>
                    <abp-button class="btn btn-info me-md-2" style="color:#FFFFFF;" type="button" onclick="gotoInvoice('@Model.OceanExportHblDto.MblId','@Model.OceanExportHblDto.Id',1)">@L["Btn:AddDC"]</abp-button>
                    <abp-button class="btn btn-info me-md-2" style="color:#FFFFFF;" type="button" onclick="gotoInvoice('@Model.OceanExportHblDto.MblId','@Model.OceanExportHblDto.Id',2)">@L["Btn:AddAP"]</abp-button>
                </div>
                <table width="100%" class="table table-bordered" style="border-color:#333333;padding-left:2px;margin:2px;font-size:0.5em;">
                    <tr border="1">
                        <th width="15%"></th>
                        <th width=" 10%">@L["Display:InvoiceNo"]</th>
                        <th width=" 15%">@L["Display:To"]</th>
                        <th width="10%">@L["RevenueName"]</th>
                        <th width="10%">@L["CostId"]</th>
                        <th width="10%">@L["Display:Balance"]</th>
                        <th width="5%">@L["Display:Status"]</th>
                        <th width="10%">@L["PostDate"]</th>
                        <th width="10%">@L["Display:InvoiceDate"]</th>
                        <th width="5%">@L["Display:Function"]</th>
                    </tr>
                    @if (Model.m0invoiceDtos != null && Model.m0invoiceDtos.Count > 0)
                    {
                        var i = 0;
                        foreach (var dto in Model.m0invoiceDtos)
                        {
                            if (i == 0)
                            {
                                i++;
                                <tr>
                                    <td style="background-color:#555555;color:#ffffff;text-align:center;" rowspan="@Model.m0invoiceDtos.Count">@L["Menu:AccountingAR"]</td>
                                    <td><a href="/Accounting/Invoice?MethodType=1&Mid=@Model.Id&Hid=&InvoiceType=0&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.InvoiceCompanyName</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td>0.00</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td><a href="/Accounting/Invoice?MethodType=1&Mid=@Model.Id&Hid=&InvoiceType=0&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.InvoiceCompanyName</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td>0.00</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }

                        }
                    }
                    @if (Model.m1invoiceDtos != null && Model.m1invoiceDtos.Count > 0)
                    {
                        var i = 0;
                        foreach (var dto in Model.m1invoiceDtos)
                        {
                            if (i == 0)
                            {
                                i++;
                                <tr>
                                    <td style="background-color:#555555;color:#ffffff;text-align:center;" rowspan="@Model.m1invoiceDtos.Count">@L["Menu:AccountingDC"]</td>
                                    <td><a href="/Accounting/Invoice?MethodType=1&Mid=@Model.Id&Hid=&InvoiceType=1&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.InvoiceCompanyName</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td>0.00</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td><a href="/Accounting/Invoice?MethodType=1&Mid=@Model.Id&Hid=&InvoiceType=1&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.InvoiceCompanyName</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td>0.00</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }

                        }
                    }
                    @if (Model.m2invoiceDtos != null && Model.m2invoiceDtos.Count > 0)
                    {
                        var i = 0;
                        foreach (var dto in Model.m2invoiceDtos)
                        {
                            if (i == 0)
                            {
                                i++;
                                <tr>
                                    <td style="background-color:#555555;color:#ffffff;text-align:center;" rowspan="@Model.m2invoiceDtos.Count">@L["Menu:AccountingAP"]</td>
                                    <td><a href="/Accounting/Invoice?MethodType=1&Mid=@Model.Id&Hid=&InvoiceType=2&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.InvoiceCompanyName</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td>0.00</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td><a href="/Accounting/Invoice?MethodType=1&Mid=@Model.Id&Hid=&InvoiceType=2&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.InvoiceCompanyName</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td>0.00</td>
                                    <td>@dto.OutstandingAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }

                        }
                    }

                </table>

            </abp-column>
        </abp-row>
        <abp-row>
            <abp-column size-md="_12">
                &nbsp;
            </abp-column>
        </abp-row>
        <abp-row>
            <abp-column>
                <abp-card-header style="background:#cccccc;color:#FFFFFF;">
                    @L["Title:Memo"]
                </abp-card-header>
                <abp-card>
                    <abp-card-body>
                        <partial name="Memos/_Memo" model="new _MemoModel(Model.OceanExportHblDto.Id, Dolphin.Freight.Common.FreightPageType.OEMBL)" />
                    </abp-card-body>
                </abp-card>
            </abp-column>
        </abp-row>
