                                                        <td>@dto.InvoiceCompanyName</td>
                                                    @{
                                                        double j = 0;
                                                    }
                                                    @foreach(var invBill in dto.InvoiceBillDtos){
                                                        j = j + @invBill.Quantity;
                                                    }
                                                    <td>@j</td>
                                                    <td>0.00</td>
                                                    @{
                                                        double r = 0;
                                                    }
                                                    @foreach(var invRate in dto.InvoiceBillDtos)
                                                    {
                                                        r += @invRate.Quantity * @invRate.Rate;
                                                    }
