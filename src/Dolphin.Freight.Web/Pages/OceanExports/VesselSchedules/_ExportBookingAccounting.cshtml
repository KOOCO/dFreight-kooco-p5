@using Dolphin.Freight.Localization;
@using Dolphin.Freight.Accounting;
@using Dolphin.Freight.Web.Pages.Components;
@using Dolphin.Freight.Web.Pages.Shared.Memos;
@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization;
@using Volo.Abp.Account.Localization
@using Volo.Abp.Users;
@model Dolphin.Freight.Web.ViewModels.ImportExport.HawbHblViewModel
@inject ICurrentUser CurrentUser
@inject IDropdownService _dropdown
@inject IStringLocalizer<FreightResource> L

<abp-card class="card board-item" id="bookCard">
    <abp-card-header class="card-header active" style="background:#f3c200;color:#FFFFFF;">
        <abp-row>
            <abp-column size-md="_9">
                <abp-card-title>
                    S/O <span id="title0"></span>
                    <span id="title0" style="font-size:0.8em;"></span>
                    <span id="title2" style="font-size:0.8em;"></span>
                    <span id="title3" style="font-size:0.8em;"></span>
                    <span id="title4" style="font-size:0.8em;"></span>
                    <span id="title5" style="font-size:0.8em;"> </span>
                </abp-card-title>

            </abp-column>
            <abp-column size-md="_3" class="text-end">

            </abp-column>

        </abp-row>

        <button class="btn btn-collapse " type="button" data-bs-toggle="collapse" data-bs-target="#bookingDiv" aria-expanded="true" aria-controls="bookingDiv">
        </button>
    </abp-card-header>
    <abp-card-body class="collapse show customForm" id="bookingDiv">
        <abp-row>
            <abp-column size-md="_12">
                <div>
                    <abp-button class="btn btn-info me-md-2" style="color:#FFFFFF;" type="button" onclick="gotoBookingInvoice('@Model.ExportBookingDto.Id',0)">@L["Btn:AddAR"]</abp-button>
                    <abp-button class="btn btn-info me-md-2" style="color:#FFFFFF;" type="button" onclick="gotoBookingInvoice('@Model.ExportBookingDto.Id',1)">@L["Btn:AddDC"]</abp-button>
                    <abp-button class="btn btn-info me-md-2" style="color:#FFFFFF;" type="button" onclick="gotoBookingInvoice('@Model.ExportBookingDto.Id',2)">@L["Btn:AddAP"]</abp-button>
                </div>
                <table width="100%" class="table table-bordered" style="border-color:#333333;padding-left:2px;margin:2px;font-size:0.5em;">
                    <tr border="1">
                        <th width="15%"></th>
                        <th width="10%">@L["Display:InvoiceNo"]</th>
                        <th width="15%">@L["Display:To"]</th>
                        <th width="10%">@L["RevenueName"]</th>
                        <th width="10%">@L["CostId"]</th>
                        <th width="10%">@L["Display:Balance"]</th>
                        <th width="5%">@L["Display:Status"]</th>
                        <th width="10%">@L["PostDate"]</th>
                        <th width="10%">@L["Display:InvoiceDate"]</th>
                        <th width="5%">@L["Display:Function"]</th>
                    </tr>
                    @if (Model.h0invoiceDtos != null && Model.h0invoiceDtos.Count > 0)
                    {
                        var i = 0;
                        foreach (var dto in Model.h0invoiceDtos)
                        {
                            if (i == 0)
                            {
                                i++;
                                <tr>
                                    <td style="background-color:#555555;color:#ffffff;text-align:center;" rowspan="@Model.h0invoiceDtos.Count">@L["Menu:AccountingAR"]</td>
                                    <td><a href="/Accounting/Invoice?MethodType=4&Bid=@Model.ExportBookingDto.Id&InvoiceType=0&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.InvoiceCompanyName</td>
                                    @{
                                        double j = 0;
                                    }
                                    @foreach (var invBill in dto.InvoiceBillDtos)
                                    {
                                        j = j + @invBill.Quantity;
                                    }
                                    <td>@j</td>
                                    <td>0.00</td>
                                    @{
                                        double r = 0;
                                    }
                                    @*@foreach (var invRate in dto.InvoiceBillDtos)
                                    {
                                        r += @invRate.Quantity * @invRate.Rate;
                                    }*@
                                    <td>@dto.TotalAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td><a href="/Accounting/Invoice?MethodType=4&Bid=@Model.ExportBookingDto.Id&InvoiceType=0&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.InvoiceCompanyName</td>
                                    @{
                                        double j = 0;
                                    }
                                    @foreach (var invBill in dto.InvoiceBillDtos)
                                    {
                                        j = j + @invBill.Quantity;
                                    }
                                    <td>@j</td>
                                    <td>0.00</td>
                                    @{
                                        double r = 0;
                                    }
                                    @*@foreach (var invRate in dto.InvoiceBillDtos)
                                    {
                                        r += @invRate.Quantity * @invRate.Rate;
                                    }*@
                                    <td>@dto.TotalAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }

                        }
                    }
                    @if (Model.h1invoiceDtos != null && Model.h1invoiceDtos.Count > 0)
                    {
                        var i = 0;
                        foreach (var dto in Model.h1invoiceDtos)
                        {
                            if (i == 0)
                            {
                                i++;
                                <tr>
                                    <td style="background-color:#555555;color:#ffffff;text-align:center;" rowspan="@Model.h1invoiceDtos.Count">@L["Menu:AccountingDC"]</td>
                                    <td><a href="/Accounting/Invoice?MethodType=4&Bid=@Model.ExportBookingDto.Id&InvoiceType=1&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.InvoiceCompanyName</td>
                                    @{
                                        double j = 0;
                                    }
                                    @foreach (var invBill in dto.InvoiceBillDtos)
                                    {
                                        j = j + @invBill.Quantity;
                                    }
                                    <td>@j</td>
                                    <td>0.00</td>
                                    @{
                                        double r = 0;
                                    }
                                    @*@foreach (var invRate in dto.InvoiceBillDtos)
                                    {
                                        r += invRate.Quantity * invRate.Rate;
                                    }*@
                                    <td>@dto.TotalAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td><a href="/Accounting/Invoice?MethodType=4&Bid=@Model.ExportBookingDto.Id&InvoiceType=1&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.InvoiceCompanyName</td>
                                    @{
                                        double j = 0;
                                    }
                                    @foreach (var invBill in dto.InvoiceBillDtos)
                                    {
                                        j = j + @invBill.Quantity;
                                    }
                                    <td>@j</td>
                                    <td>0.00</td>
                                    @{
                                        double r = 0;
                                    }
                                    @*@foreach (var invRate in dto.InvoiceBillDtos)
                                    {
                                        r += invRate.Quantity * invRate.Rate;
                                    }*@
                                    <td>@dto.TotalAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }

                        }
                    }
                    @if (Model.h2invoiceDtos != null && Model.h2invoiceDtos.Count > 0)
                    {
                        var i = 0;
                        foreach (var dto in Model.h2invoiceDtos)
                        {
                            if (i == 0)
                            {
                                i++;
                                <tr>
                                    <td style="background-color:#555555;color:#ffffff;text-align:center;" rowspan="@Model.h2invoiceDtos.Count">@L["Menu:AccountingAP"]</td>
                                    <td><a href="/Accounting/Invoice?MethodType=4&Bid=@Model.ExportBookingDto.Id&InvoiceType=2&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.ShipTo</td>
                                    @{
                                        double j = 0;
                                    }
                                    @foreach (var invBill in dto.InvoiceBillDtos)
                                    {
                                        j = j + @invBill.Quantity;
                                    }
                                    <td>@j</td>
                                    <td>0.00</td>
                                    @{
                                        double r = 0;
                                    }
                                    @*@foreach (var invRate in dto.InvoiceBillDtos)
                                    {
                                        r += invRate.Quantity * invRate.Rate;
                                    }*@
                                    <td>@dto.TotalAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td><a href="/Accounting/Invoice?MethodType=4&Bid=@Model.ExportBookingDto.Id&InvoiceType=2&InvoiceId=@dto.Id">@dto.InvoiceNo</a></td>
                                    <td>@dto.ShipTo</td>
                                    @{
                                        double j = 0;
                                    }
                                    @foreach (var invBill in dto.InvoiceBillDtos)
                                    {
                                        j = j + @invBill.Quantity;
                                    }
                                    <td>@j</td>
                                    <td>0.00</td>
                                    @{
                                        double r = 0;
                                    }
                                    @*@foreach (var invRate in dto.InvoiceBillDtos)
                                    {
                                        r += invRate.Quantity * invRate.Rate;
                                    }*@
                                    <td>@dto.TotalAmount</td>
                                    <td></td>
                                    <td>@dto.PostDate</td>
                                    <td>@dto.InvoiceDate</td>
                                    <td></td>
                                </tr>
                            }

                        }
                    }

                    <tr style="font-size: 10px;">
                        <td colspan="3" style="text-align: right;font-weight: 700;">Total</td>
                        <td style="text-align: right;font-weight: 700;">@((Model.h0invoiceDtos.Sum(x => x.InvoiceBillDtos.Sum(x => x.Quantity)) + Model.h1invoiceDtos.Sum(x => x.InvoiceBillDtos.Sum(x => x.Quantity)) + Model.h2invoiceDtos.Sum(x => x.InvoiceBillDtos.Sum(x => x.Quantity))).ToString("N2"))</td>
                        <td style="text-align: right;font-weight: 700;">0.00</td>
                        <td style="text-align: right;font-weight: 700;">@(Math.Round(Model.h0invoiceDtos.Sum(x => x.TotalAmount ?? 0.00) + Model.h1invoiceDtos.Sum(x => x.TotalAmount ?? 0.00) + Model.h2invoiceDtos.Sum(x => x.TotalAmount ?? 0.00), 2))</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr style="font-size: 10px;">
                        <td colspan="3" style="text-align: right;font-weight: 700;">Total Before Amount</td>

                        <td colspan="2" style="text-align: right;font-weight: 700;">@((Model.h0invoiceDtos.Sum(x => x.TotalBeforeTax) + Model.h1invoiceDtos.Sum(x => x.TotalBeforeTax) + Model.h2invoiceDtos.Sum(x => x.TotalBeforeTax)))</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>

                    <tr style="font-size: 10px;">
                        <td colspan="3" style="text-align: right;font-weight: 700;">Total Tax</td>

                        <td colspan="2" style="text-align: right;font-weight: 700;">@((Model.h0invoiceDtos.Sum(x => x.TotalTax) + Model.h1invoiceDtos.Sum(x => x.TotalTax) + Model.h2invoiceDtos.Sum(x => x.TotalTax)))</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr style="font-size: 10px;">
                        <td colspan="3" style="text-align: right;font-weight: 700;">Total Amount</td>

                        <td colspan="2" style="text-align: right;font-weight: 700;">@(Math.Round(Model.h0invoiceDtos.Sum(x => x.TotalAmount ?? 0.00) + Model.h1invoiceDtos.Sum(x => x.TotalAmount ?? 0.00) + Model.h2invoiceDtos.Sum(x => x.TotalAmount ?? 0.00), 2))</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>

            </abp-column>
        </abp-row>
        <abp-row>
            <abp-column size-md="_12">
                &nbsp;
            </abp-column>
        </abp-row>

        <abp-row>
            <abp-column>
                <abp-card-header style="background:#cccccc;color:#FFFFFF;">
                    @L["Title:Memo"]
                </abp-card-header>
                <abp-card>
                    <abp-card-body>
                        <partial name="Memos/_Memo" model="new _MemoModel(Model.Id, Dolphin.Freight.Common.FreightPageType.VS)" />
                    </abp-card-body>
                </abp-card>
            </abp-column>
        </abp-row>
    </abp-card-body>
</abp-card>