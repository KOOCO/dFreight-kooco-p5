          <div class="portlet-tool">
                <div class="btn-group" role="group" aria-label="Basic outlined example" >
                  <button type="button" id="newBtn" class="btn btn-outline-secondary" disabled >@L["Batchupdateinvoices"]</button>
                    <button type="button" id="copyId" class="btn btn-outline-secondary" onclick="" disabled><i class="fa fa-files-o me-0"></i></button>
                    <button type="button" class="btn btn-outline-secondary" style="cursor: no-drop;" id="btnDelete" disabled><i class="fa fa-trash me-0"></i></button>
