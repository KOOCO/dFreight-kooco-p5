@using Dolphin.Freight.Localization
@using Dolphin.Freight.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@model Dolphin.Freight.Web.ViewModels.Package.PackageIndexViewModel
@inject IStringLocalizer<FreightResource> L
@inject IAuthorizationService AuthorizationService
@{
    Layout = null;
}
@*<div style="background-color:black;display: flex;justify-content:center;">*@
@{
    for (int i = 0; i < Model.HblPDFList.Count; i++)
    {     
        <div style="width:400px;background-color:white;">
        <br />

        <div>
                <div><center><h2>@Model.HblPDFList[i].Office</h2></center></div>
        </div>
        <center>
            <hr/>
        </center>
            <div><i>TO</i></div>
            <div style="display:inline-block;width:5px">&nbsp;</div>
            <div style="display:inline-block;width:5px">
                <pre style="font-weight:bold;font-size:large;"><b>@Model.HblPDFList[i].To</b></pre>
            </div>
            <br />
            <center>
                <hr/>
            </center>
            <div><i>MBL NO.</i></div>
            <div style="display:inline-block;width:5px">&nbsp;</div>
            <div style="display:inline-block;width:5px"><font size="6"><b><span style="white-space: nowrap;">@Model.HblPDFList[i].MblNo</span></b></font></div>
            <center>
                <hr/>
            </center>
            <div>
                <div>
                    <div><i>HBL NO.</i></div>
                    <div style="display:inline-block;width:5px">&nbsp;</div>
                    <div style="display:inline-block;width:5px">
                        <div><font size="6"><b><span style="white-space: nowrap;">@Model.HblPDFList[i].HblNo</span></b></font></div>
                    </div>
                </div>
            </div>
            <center>
                <hr/>
            </center>
            <div><i>DESTINATION</i></div>
            <div>
                <div style="display:inline-block;width:5px">&nbsp;</div>
                <div style="display:inline-block;">
                    <span style="font-weight:bold;font-size:large;white-space: nowrap;">@Model.HblPDFList[i].Destination</span>
        </div>
            </div>
            <center>
                <hr/>
            </center>
            <div>
                <div><i>PIECES</i></div>
                <div style="display:inline-block;width:5px">&nbsp;</div>
                <div style="display:inline-block;"><font size="6"><b><span>@Model.HblPDFList[i].Pieces/@Model.HblPDFList[i].TotalPieces</span></b></font></div>
            </div>
        </div>
        if (i +1 < Model.HblPDFList.Count)
        { 
            <div style="page-break-before:always">&nbsp;</div>
        }        
    }
}
@*</div>*@